<% @page_title = @artist.name %>

<p>Genre: <em><%= @artist.genre %></em> </p>

<a href="/artists/<%= @artist.id %>/edit">Edit</a>

<h5>Albums</h5>

<% if @artist.albums.empty? %>

<p><em>None</em></p>

<% else %> <!-- artist has albums -->

<ul>
  <% @artist.albums.each do |album| %>
  <li><a href="/artists/<%= @artist.id %>/albums/<%= album.id %>"><%= album.name %></a></li>
  <% end %>
</ul>

<% end %>

<a href="/artists/<%= @artist.id %>/albums/new">Add Album</a>
