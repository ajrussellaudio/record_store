<% @page_title = "Edit #{@artist.name}" %>

<form action="/artists/<%= @artist.id %>" method="post">
  <fieldset>
    <legend><%= @page_title %></legend>

    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= @artist.name %>"><br>

    <% genres = ["rock", "pop", "electronic", "metal", "hip-hop", "jazz", "classical"].sort %>
    <label for="genre">Genre:</label>
    <select name="genre">
      <% genres.each do |genre| %>
      <option value="<%= genre %>" <%= 'selected="selected"' if genre == @artist.genre %>><%= genre %></option>
      <% end %>
    </select><br>

    <input type="submit" value="<%= @page_title %>">

  </fieldset>
  
</form>