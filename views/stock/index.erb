<% @page_title = "All Stock" %>

<a href="/stock/new">Add New Stock Item</a>

<table>
  <tr>
    <th>Artist</th>
    <th>Album</th>
    <th>Genre</th>
    <th>Format</th>
    <th>Quantity</th>
    <th>Re-order At</th>
    <th>Purchase Cost</th>
    <th>Selling Price</th>
  </tr>
  <% @stock.each do |item| %>
  <tr>
    <td><%= item.artist.name %></td>
    <td><%= item.album.name %></td>
    <td><%= item.genre %></td>
    <td><%= item.format %></td>
    <td><%= item.current_stock_level %></td>
    <td><%= item.reorder_threshold %></td>
    <td><%= item.buy_price %></td>
    <td><%= item.sell_price %></td>
  </tr>
  <% end %>
</table>

<a href="/stock/new">Add New Stock Item</a>